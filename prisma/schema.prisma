// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Auth models
model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts Account[]
  sessions Session[]

  @@map("user")
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("account")
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, token])
  @@map("verification_token")
}

// Business models
model Company {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("company")
}

// Products
model Product {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  slug            String   @unique
  name            String
  shortDescription String
  description     String
  features        String[]
  applications    String[]
  modelPath       String
  imagePath       String
  color           String
  category        String
  brochureUrl     String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("product")
}

model Solution {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  slug        String   @unique
  title       String
  description String
  imagePath   String
  link        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("solution")
}

model PrincipalProduct {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  slug        String   @unique
  title       String
  description String
  imagePath   String
  link        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("principal_product")
}

model SystemIntegrator {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  slug        String   @unique
  title       String
  description String
  icon        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("system_integrator")
}

model Gallery {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  category  String
  title     String
  subtitle  String
  imagePath String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("gallery")
}


model Team {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  position  String
  imagePath String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("team")
}

model ProcessStep {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  number      String
  title       String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("process_step")
}

model Collaborator {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  description    String
  longDescription String
  logo           String
  website        String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("collaborator")
}

model ContactForm {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  phone     String
  subject   String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contact_form")
}

// anonymous 

